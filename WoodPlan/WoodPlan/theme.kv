#:import rgba kivy.utils.get_color_from_hex

<BotaoPadrao@Button>:
    background_normal: ''
    background_color: rgba("#795548")  # marrom madeira
    color: (1, 1, 1, 1)
    font_size: 18
    size_hint_y: None
    height: 50
    bold: True
    canvas.before:
        Color:
            rgba: rgba("#6D4C41") if self.state == "normal" else rgba("#8D6E63")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

<BotaoSecundario@Button>:
    background_normal: ''
    background_color: rgba("#FFB300")  # amarelo ouro
    color: (0, 0, 0, 1)
    font_size: 16
    size_hint_y: None
    height: 44
    bold: True
    canvas.before:
        Color:
            rgba: rgba("#FBC02D") if self.state == "normal" else rgba("#FDD835")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<EntradaPadrao@TextInput>:
    background_color: (1, 1, 1, 1)
    foreground_color: (0.2, 0.2, 0.2, 1)
    font_size: 16
    size_hint_y: None
    height: 44
    padding: [10, 10]
    multiline: False
    canvas.before:
        Color:
            rgba: (0.9, 0.9, 0.9, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<Titulo@Label>:
    color: rgba("#3E2723")
    font_size: 26
    bold: True
    size_hint_y: None
    height: 50
    halign: "center"
    valign: "middle"
    text_size: self.size

<Subtitulo@Label>:
    color: rgba("#5D4037")
    font_size: 18
    size_hint_y: None
    height: 40
    halign: "center"
    valign: "middle"
    text_size: self.size

<Corpo@Label>:
    color: rgba("#212121")
    font_size: 16
    halign: "left"
    valign: "middle"
    text_size: self.size

<Caixa@BoxLayout>:
    padding: [15, 15]
    spacing: 10
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: rgba("#FAFAFA")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

<ScrollContainer@ScrollView>:
    bar_color: rgba("#795548")
    bar_width: 8


