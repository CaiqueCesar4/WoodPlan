# theme.kv  — atualizado (use exatamente estas cores e sombras)
#:import rgba kivy.utils.get_color_from_hex

<BotaoPadrao@Button>:
    background_normal: ''
    # cor primária igual ao usado no orcamento_modulo (aprox. 0.45,0.25,0.15)
    background_color: (0.45, 0.25, 0.15, 1)
    color: (1, 1, 1, 1)
    font_size: 18
    size_hint_y: None
    height: 50
    bold: True
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.28  # sombra
        RoundedRectangle:
            pos: self.x, self.y - 3
            size: self.width, self.height + 3
            radius: [12]
        Color:
            rgba: self.background_color if self.state == "normal" else (0.55, 0.32, 0.20, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

<BotaoSecundario@Button>:
    background_normal: ''
    # cor secundária igual ao usado no orcamento_modulo (aprox. 0.35,0.35,0.35)
    background_color: (0.35, 0.35, 0.35, 1)
    color: (1, 1, 1, 1)
    font_size: 16
    size_hint_y: None
    height: 44
    bold: True
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.22
        RoundedRectangle:
            pos: self.x, self.y - 3
            size: self.width, self.height + 3
            radius: [10]
        Color:
            rgba: self.background_color if self.state == "normal" else (0.5, 0.5, 0.5, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<EntradaPadrao@TextInput>:
    background_color: (0.3, 0.3, 0.3, 1)
    foreground_color: (1, 1, 1, 1)
    font_size: 16
    size_hint_y: None
    height: 44
    padding: [10, 10]
    multiline: False
    cursor_color: (1, 1, 1, 1)
    hint_text_color: (0.7, 0.7, 0.7, 1)
    canvas.before:
        Color:
            rgba: (0.3, 0.3, 0.3, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<Titulo@Label>:
    color: (1, 1, 1, 1)
    font_size: 42
    bold: True
    size_hint_y: None
    height: 60
    halign: "center"
    valign: "middle"
    text_size: self.size

<Subtitulo@Label>:
    color: (0.85, 0.85, 0.85, 1)
    font_size: 18
    size_hint_y: None
    height: 40
    halign: "center"
    valign: "middle"
    text_size: self.size

<Corpo@Label>:
    color: (1, 1, 1, 1)
    font_size: 16
    halign: "left"
    valign: "middle"
    text_size: self.size

<Caixa@BoxLayout>:
    padding: [15, 15]
    spacing: 10
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (0.25, 0.25, 0.25, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

<ScrollContainer@ScrollView>:
    bar_color: rgba("#6D4C41")
    bar_width: 8

<Screen>:
    canvas.before:
        Color:
            rgba: 0.25, 0.25, 0.25, 1
        Rectangle:
            pos: self.pos
            size: self.size
